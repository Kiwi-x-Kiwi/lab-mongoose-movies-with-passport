<h2>Edit Movie Info</h2>

<form action="/movies/{{movie._id}}" method="POST">
  <label>Title: </label>
  <input type="text" name="title" value = "{{movie.title}}">

  <label>Genre: </label>
  <input type="text" name="genre" value = "{{movie.genre}}">

  <label>Plot: </label>
  <input type="text" name="plot" value = "{{movie.plot}}">

  <label>Main Cast: </label>
  <select name="celebs">
    {{#each celebs}}
      {{#if this.match}}
        <option selected value="{{this._id}}">{{this.name}}</option>
        {{else}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/if}}
    {{/each}}
  </select>

  <button type="submit">Update Movie</button>
</form>